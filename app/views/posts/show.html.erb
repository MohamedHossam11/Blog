<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Tags:</strong>
  <% @post.tags.each do |tag| %>
    <p>
    <%= tag.name %>
    </p>
  <%end%>
</p>


<%= render 'comments/form' %>
<%= render 'tags/form' %>
<%= render 'comments/comment' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
